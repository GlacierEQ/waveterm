{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/aipanel/*": ["./frontend/app/aipanel/*"],
      "@/app/*": ["./frontend/app/*"],
      "@/block/*": ["./frontend/app/block/*"],
      "@/element/*": ["./frontend/app/element/*"],
      "@/modals/*": ["./frontend/app/modals/*"],
      "@/notification/*": ["./frontend/app/notification/*"],
      "@/onboarding/*": ["./frontend/app/onboarding/*"],
      "@/shadcn/*": ["./frontend/app/shadcn/*"],
      "@/store/*": ["./frontend/app/store/*"],
      "@/suggestion/*": ["./frontend/app/suggestion/*"],
      "@/tab/*": ["./frontend/app/tab/*"],
      "@/view/*": ["./frontend/app/view/*"],
      "@/workspace/*": ["./frontend/app/workspace/*"],
      "@/*": ["./frontend/*"]
    },
    "types": ["node", "vite/client"]
  },
  "include": [
    "frontend/**/*",
    "emain/**/*",
    "scripts/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    ".cache",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
