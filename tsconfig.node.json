{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "types": ["node", "vite/client"],
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "electron.vite.config.ts",
    "electron-builder.config.cjs"
  ]
}
